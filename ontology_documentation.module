    case "admin/help#ontology_documentation":
      $help_form['header'] = array(
      '#type' => 'html_tag',
      '#tag' => 'h3',
      '#value' => 'Ontology documentation'
    );
    $help_form['content'] = array(
      '#type' => 'html_tag',
      '#tag' => 'em',
      '#value' => 'Upgrade OWL documentation pages',
    );
    break;
  }
  return drupal_render($help_form);
}

